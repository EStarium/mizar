{
  "include": [
    "./tests/**/*", 
    "./src/main/**/*", 
    "./src/renderer/**/*", 
    "./src/common/**/*"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2021",
    "allowJs": true,
    "module": "CommonJS",
    "noImplicitAny": true,
    "jsx": "preserve",
    "types": [
      "node"
    ],
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "paths": {
      "common/*": ["./src/common/*"],
      "@/*": ["./src/renderer/*"],
    }
  }
}